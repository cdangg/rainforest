<h1>Products</h1>
	<hr/>

	<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search" %>
	<% end %>
	<ul>
			<div id="products">
				<%= render @products %>
			</div>
	</ul>

	<p id="products-pagination"><%= paginate @products %></p>

<%= params.inspect %>